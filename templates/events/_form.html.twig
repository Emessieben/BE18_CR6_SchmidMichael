{{ form_start(form, {'attr': {'class': 'border rounded p-3 m-3 bg-light'}}) }}
<div class="container">
	<div class="row mb-3">
		{{ form_label(form.name, "Name", {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
		{{ form_widget(form.name, {'attr': {'class': 'col-sm-10 border-dark border-1 rounded'}}) }}
	</div>
	<div class="row mb-3">
		{{ form_label(form.date, "Date and Time", {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
		{{ form_widget(form.date, {'attr': {'class': 'col-sm-10 fs-3 border-dark rounded border-1','value': '2023-04-01T00:00Z'}}) }}
	</div>
	<div class="row mb-3">
		{{ form_label(form.description, "Description", {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
		{{ form_widget(form.description, {'attr': {'class': 'col-sm-10 border-dark rounded border-1'}}) }}
	</div>
	<div class="row mb-3">
		{{ form_label(form.image, "Image", {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
		{{ form_widget(form.image, {'attr': {'class': 'col-sm-10 border-dark rounded border-1'}}) }}
	</div>
	<div class="row mb-3">
		{{ form_label(form.capacity, "Capacity", {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
		{{ form_widget(form.capacity, {'attr': {'class': 'col-sm-10 border-dark rounded  border-1'}}) }}
		<div class="form-error">
			{{ form_errors(form.capacity, {'attr': {'class': 'text-danger'}}) }}
		</div>
	</div>
	<div class="row mb-3">
		{{ form_label(form.contact_email, "Email", {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
		{{ form_widget(form.contact_email, {'attr': {'class': 'col-sm-10 border-dark rounded border-1'}}) }}
		<div class="form-error">
			{{ form_errors(form.contact_email, {'attr': {'class': 'text-danger'}}) }}
		</div>
	</div>
	<div class="row mb-3">
		{{ form_label(form.contact_phone_number, "Phone Number", {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
		{{ form_widget(form.contact_phone_number, {'attr': {'class': 'col-sm-10 border-dark rounded border-1'}}) }}
		<div class="form-error">
			{{ form_errors(form.contact_phone_number, {'attr': {'class': 'text-danger'}}) }}
		</div>
	</div>
	<div class="row mb-3">
		{{ form_label(form.address, "Address", {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
		{{ form_widget(form.address, {'attr': {'class': 'col-sm-10 border-dark rounded border-1'}}) }}
	</div>
	<div class="row mb-3">
		{{ form_label(form.url, "URL", {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
		{{ form_widget(form.url, {'attr': {'class': 'col-sm-10 border-dark rounded border-1'}}) }}
	</div>
	<div class="row mb-3">
		{{ form_label(form.type, "Type", {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
		{{ form_widget(form.type, {'attr': {'class': 'col-sm-10 type-label border-dark rounded border-1'}}) }}
	</div>

	<button class="btn btn-outline-dark d-block mx-auto my-3">
		<i class="bi bi-save-fill"></i>
		{{ button_label|default('Save') }}</button>

</div>
{{ form_end(form) }}


