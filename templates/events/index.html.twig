{% extends 'base.html.twig' %}

{% block title %}Events in Berlin
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center m-1">All Events</h1>
		<div class="row">
			{% for event in events %}
				<div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 d-flex justify-content-around align-items-start">
					<div class="card bg-light my-1 " style="width: 18rem;">
						<img src="{{ event.image }}" class="card-img-top" alt="{{ event.name }}">
						<div class="card-body">
							<h5 class="card-title">{{ event.name }}</h5>
							<p class="card-text">{{ event.date|date("d.m.Y") }}</p>
							<p class="card-text">{{ event.date|date("H:i") }}
								Uhr</p>
							<a href="/events/{{ event.id }}" class="btn btn-info">Details</a>
						</div>
					</div>
				</div>
			{% else %}
				<p>no records found</p>
			{% endfor %}
		</div>
	</div>
{% endblock %}
